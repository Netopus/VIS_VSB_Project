package Entities;

import jakarta.persistence.Column;
import jakarta.persistence.DiscriminatorValue;
import jakarta.persistence.Entity;
import java.sql.Timestamp;

@Entity
@DiscriminatorValue("MANGA")
public class Manga extends Media {

    @Column(name = "language_id")
    private int languageId;

    @Column(name = "rating")
    private int rating;

    @Column(name = "last_update")
    private Timestamp lastUpdate;

    // Constructors
    public Manga(int i, int j, String title, String string, int k, Object object) {}

    public Manga(String title, String description, Timestamp releaseDate, int languageId, int rating, Timestamp lastUpdate) {
        super(title, description, releaseDate); // Call the Media constructor
        this.languageId = languageId;
        this.rating = rating;
        this.lastUpdate = lastUpdate;
    }

    // Getters and Setters
    public int getLanguageId() {
        return languageId;
    }

    public void setLanguageId(int languageId) {
        this.languageId = languageId;
    }

    public int getRating() {
        return rating;
    }

    public void setRating(int rating) {
        if (rating < 1 || rating > 5) {
            throw new IllegalArgumentException("Rating must be between 1 and 5");
        }
        this.rating = rating;
    }

    public Timestamp getLastUpdate() {
        return lastUpdate;
    }

    public void setLastUpdate(Timestamp lastUpdate) {
        this.lastUpdate = lastUpdate;
    }

    @Override
    public String toString() {
        return "Manga{" +
                "languageId=" + languageId +
                ", rating=" + rating +
                ", lastUpdate=" + lastUpdate +
                "} " + super.toString();
    }
}
