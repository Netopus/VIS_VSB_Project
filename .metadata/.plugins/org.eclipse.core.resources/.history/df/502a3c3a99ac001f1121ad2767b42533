package cz.vsb.tuo.kel0060;

import java.sql.SQLException;
import java.util.List;

public class UserFind{
    public static void main(String[] args) {
        try {
            // Find by ID
            UserGateway userById = UserGateway.findById(1L);
            if (userById != null) {
                System.out.println("Found user by ID: " + userById.getEmail());
            } else {
                System.out.println("User not found by ID.");
            }

            // Find by email
            UserGateway userByEmail = UserGateway.findByEmail("test@example.com");
            if (userByEmail != null) {
                System.out.println("Found user by email: " + userByEmail.getFirstName());
            } else {
                System.out.println("User not found by email.");
            }

            // Find by role
            List<UserGateway> admins = UserGateway.findByRole('A');
            System.out.println("Admins found: " + admins.size());
            for (UserGateway admin : admins) {
                System.out.println("Admin: " + admin.getEmail());
            }

            // Find all users
            List<UserGateway> allUsers = UserGateway.findAll();
            System.out.println("Total users found: " + allUsers.size());
        } catch (SQLException e) {
            e.printStackTrace();
        }
    }
}
